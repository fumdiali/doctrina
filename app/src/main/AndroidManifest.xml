<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.layer7.doctrina">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/doctrina_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="@string/category_label"
            android:parentActivityName=".MainActivity" />
        <activity
            android:label="@string/iboActivity"
            android:name=".IboActivity"
            android:parentActivityName=".CategoryActivity"/>
        <activity
            android:label="@string/mathActivity"
            android:name=".MathActivity"
            android:parentActivityName=".CategoryActivity"></activity>
    </application>

</manifest>